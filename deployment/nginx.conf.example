# Nginx configuration example for F-16 Fuel Calculator Vue.js SPA
# This file provides configuration examples for different deployment scenarios

# Example 1: Subdirectory deployment (Recommended)
# Deploy to https://yourdomain.com/fuel-calc/
location /fuel-calc {
    alias /var/www/html/fuel-calc;  # Path to your dist folder contents
    
    # SPA routing - serve index.html for all routes
    try_files $uri $uri/ /fuel-calc/index.html;
    
    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    
    # MIME type configuration (critical for Vue.js apps)
    location ~* \.js$ {
        add_header Content-Type "application/javascript; charset=utf-8";
        expires 1y;
        add_header Cache-Control "public, immutable";
    }
    
    location ~* \.css$ {
        add_header Content-Type "text/css; charset=utf-8";
        expires 1y;
        add_header Cache-Control "public, immutable";
    }
    
    location ~* \.json$ {
        add_header Content-Type "application/json; charset=utf-8";
        expires 1d;
    }
    
    # Static assets caching
    location ~* \.(ico|png|jpg|jpeg|gif|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        add_header Vary "Accept-Encoding";
    }
    
    # HTML files - no caching for SPA
    location ~* \.html$ {
        expires -1;
        add_header Cache-Control "no-cache, no-store, must-revalidate";
        add_header Pragma "no-cache";
    }
    
    # Enable gzip compression
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript application/javascript application/xml+rss application/json image/svg+xml;
}

# Example 2: Root domain deployment
# Deploy to https://yourdomain.com/
location / {
    root /var/www/html;  # Path to your dist folder contents
    index index.html;
    
    # SPA routing
    try_files $uri $uri/ /index.html;
    
    # Apply same MIME types and caching rules as above
    include mime.types;
    
    # JavaScript files
    location ~* \.js$ {
        add_header Content-Type "application/javascript; charset=utf-8";
        expires 1y;
        add_header Cache-Control "public, immutable";
    }
    
    # CSS files
    location ~* \.css$ {
        add_header Content-Type "text/css; charset=utf-8";
        expires 1y;
        add_header Cache-Control "public, immutable";
    }
    
    # Static assets
    location ~* \.(ico|png|jpg|jpeg|gif|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }
    
    # HTML - no caching
    location ~* \.html$ {
        expires -1;
        add_header Cache-Control "no-cache, no-store, must-revalidate";
    }
}

# Example 3: Full server block for dedicated domain/subdomain
server {
    listen 80;
    listen [::]:80;
    server_name fuel-calc.yourdomain.com;  # Replace with your domain
    
    root /var/www/html/fuel-calc;
    index index.html;
    
    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    
    # SPA routing
    location / {
        try_files $uri $uri/ /index.html;
    }
    
    # JavaScript files with correct MIME type
    location ~* \.js$ {
        add_header Content-Type "application/javascript; charset=utf-8";
        expires 1y;
        add_header Cache-Control "public, immutable";
        add_header Vary "Accept-Encoding";
    }
    
    # CSS files
    location ~* \.css$ {
        add_header Content-Type "text/css; charset=utf-8";
        expires 1y;
        add_header Cache-Control "public, immutable";
        add_header Vary "Accept-Encoding";
    }
    
    # JSON files
    location ~* \.json$ {
        add_header Content-Type "application/json; charset=utf-8";
        expires 1d;
    }
    
    # Static assets
    location ~* \.(ico|png|jpg|jpeg|gif|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        add_header Vary "Accept-Encoding";
    }
    
    # HTML files - no caching for SPA
    location ~* \.html$ {
        expires -1;
        add_header Cache-Control "no-cache, no-store, must-revalidate";
        add_header Pragma "no-cache";
    }
    
    # Enable compression
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_comp_level 6;
    gzip_types
        text/plain
        text/css
        text/xml
        text/javascript
        application/javascript
        application/xml+rss
        application/json
        image/svg+xml;
    
    # Optional: Redirect HTTP to HTTPS
    # Uncomment if you have SSL configured
    # return 301 https://$server_name$request_uri;
}

